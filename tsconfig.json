{
   "extends": "expo/tsconfig.base",
   "compilerOptions": {
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "isolatedModules": true,
      "jsx": "react-native",
      "lib": ["es2017"],

      "declaration": true,
      "strict": true,
      "paths": {
         "@/*": ["./*"]
      }
   },
   "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts", "./packages/**/*.d.ts"]
}
